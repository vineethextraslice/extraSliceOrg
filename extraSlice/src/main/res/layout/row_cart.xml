<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11268CAB"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:weightSum="6" >

        <TextView
            android:id="@+id/lbltvproductname"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="2dp"
            android:layout_weight="2.5"
            android:gravity="left|center_vertical"
            android:paddingLeft="3dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.extraslice.walknpay.adapter.MyEditText
            android:id="@+id/lbltvproductcount"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectanglebackground"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="5"
            android:text="1111"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lbltvrowprice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgclear"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="2dp"
            android:layout_weight=".5"
            android:contentDescription="@string/txtCD"
            android:src="@drawable/delete1231" />
    </LinearLayout>

</LinearLayout>