<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLyt"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:background="@color/theme_light_blue"
    android:gravity="top|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/planDetlLyt"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/showPlan"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/planName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Basic slice"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/planPrice"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Starts from"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/showPlan"
        android:layout_width="30dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/next" />

    <LinearLayout
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/planDetlLyt"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>