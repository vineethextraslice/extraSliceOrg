<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainAddProduct"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_third_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#330B4C5F"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/mainHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.25"
            android:gravity="center_vertical|center_horizontal"
            android:text="Add new product to store inventory"
            android:textColor="#707375"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/errorImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/error" />

        <TextView
            android:id="@+id/errortxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="blablabala"
            android:textColor="@color/red"
            android:textSize="11sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Item code"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/itemcode"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Item code"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Item"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Item"
            android:imeOptions="actionNext"
            android:maxLength="40"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Item description"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/itemDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Item description"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Item price"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/itemprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Item price"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Tax percentage"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/taxperc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Tax percentage"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:id="@+id/itemQtyText"
            android:gravity="left"
            android:text="Item quantity"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
            android:hint="Item quantity"
            android:inputType="number"
            android:maxLength="6"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutAdd"
        android:visibility="gone"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Add quantity"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/addquantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:background="@drawable/blackborder"
            android:gravity="left"
           
            android:hint="Add additional quantity"
            android:inputType="number"
            android:maxLength="6"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight=".75"
            android:gravity="left"
            android:text="Active"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/imgDisable"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1.25"
            android:checked="true"
            android:gravity="center_vertical|center_horizontal"
            android:height="20dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/additem"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/oval_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="Create"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/oval_background"
            android:gravity="center_horizontal|center_vertical"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout> <!-- </ScrollView> -->
