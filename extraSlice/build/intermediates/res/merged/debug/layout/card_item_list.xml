<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="left"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/cardNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.05"
            android:gravity="left|center_vertical"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/cardHolderName"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.05"
            android:gravity="left|center_vertical"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:layout_weight=".45" >

            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="3dp"
                android:contentDescription="@string/txtCD"
                android:src="@drawable/about12" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:layout_weight=".45" >

            <ImageView
                android:id="@+id/imgDel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="3dp"
                android:contentDescription="@string/txtCD"
                android:src="@drawable/deletetrash" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/changeCardLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/theme_color_trnsp_33"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/changeCardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/changeBtn"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>