<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_third_color" >

    <LinearLayout
        android:id="@+id/mainStore"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#330B4C5F"
            android:gravity="left"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/dealerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:text=""
                android:textColor="#707375"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/errorImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/error" />

            <TextView
                android:id="@+id/errortxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="blablabala"
                android:textColor="@color/red"
                android:textSize="11sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Store name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/storeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Store name"
                android:imeOptions="actionNext"
                android:maxLength="40"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Store email"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/storeEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Store email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Address line 1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/addressLine1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Address line 1"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Address line 2"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/addressLine2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Address line 2"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="City"
                android:imeOptions="actionNext"
                android:maxLength="75"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="State"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="State"
                android:imeOptions="actionNext"
                android:maxLength="35"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Zip"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/zip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Zip"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="9"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Phone"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Phone"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="15"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Logo"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:gravity="left"
                android:hint="Logo"
                android:maxLength="75"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addStore"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/oval_background"
                android:gravity="center_horizontal|center_vertical"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bCancel"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/oval_background"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>